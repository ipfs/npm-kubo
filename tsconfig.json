{
  "compilerOptions": {
    "strict": true,
    // project options
    "allowJs": true,
    "checkJs": true,
    "target": "ES2019",
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.BigInt",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmitOnError": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    // linter checks
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}